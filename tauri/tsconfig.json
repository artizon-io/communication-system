{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@artizon/react-common/*": [
        "../react-common/src/*"
      ],
      "@assets/*": [
        "assets/*"
      ]
    },
    "outDir": "typescript",  // for testing
    // "noEmit": true
  },
  "include": ["src"],
  "references": [
    { "path": "./tsconfig.node.json" },  // toggle off when tsc build
    // { "path": "../react-common" }  // need time to make this work
  ]
}
